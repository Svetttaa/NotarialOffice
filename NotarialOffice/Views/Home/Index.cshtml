@using NotarialOffice.Models.Data
@{
	ViewBag.Title = "Главная";
	var lastNews = (News)ViewBag.LastNews;
}

<div class="background">
	<div class="row  no-margin">
		<div class="col-sm-8 col-sm-offset-2">
			<h1 id="mainText">Мурыгин С. Д.</h1>
		</div>
	</div>
</div>
<div class="container body-content">
	<div class="row">
		<div class="col-md-6">
			<center>
				<h2>
					Наши услуги
				</h2>
			</center>
			<div class="list-group">
				<a class="list-group-item catalogItem list-group-item-action">
					<span>Выпуск доверенностей</span>
					<span class="float-right">от 500 ₽</span>
				</a>
				<a class="list-group-item catalogItem list-group-item-action">
					<span>Заверение копий</span>
					<span class="float-right">от 500 ₽</span>
				</a>
				<a class="list-group-item catalogItem list-group-item-action">
					<span>Проведение сделок</span>
					<span class="float-right">от 2000 ₽</span>
				</a>
				<a class="list-group-item list-group-item-action" href="/Catalog">Весь каталог</a>
			</div>
		</div>
		<div class="col-md-6">
			<center>
				<h2>
					Наши новости
				</h2>
			</center>
			@if (lastNews != null)
			{
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="center">
							<span class="h3">
								@lastNews.Title
							</span>
						</div>
						<div class="panel-title">
							@lastNews.Description
						</div>
					</div>

					<div class="list-group">
						<a href="/News" class="list-group-item">Все новости</a>
					</div>
				</div>
			}
		</div>
	</div>
